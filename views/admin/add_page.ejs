<%- include("../adminheader") %>

    <%- messages('messages', locals) %>
    <% if(errors){ %>
      <% errors.forEach(function(error){ %>
        <div class="alert alert-danger">
          <%= error.msg %>
        </div>
      <% }); %>
    <% } %>

    <h2 class="page-title">Add a page</h2>
    <a href="/admin/pages" class="btn btn-outline-dark">Back to all pages</a>
    <br><br>
    
    <form method="POST" action="/admin/pages/add-page">
        <div class="form-group">
            <label for="">Title</label>
            <input class="form-control" type="text" name="title" value="<%= title %>" placeholder="title">
        </div>
        <div class="form-group">
            <label for="">Slug</label>
            <input class="form-control" type="text" name="slug" value="<%= slug %>" placeholder="slug">
        </div>
        <div class="form-group">
            <label for="">Content</label>
            <textarea class="form-control" name="content" placeholder="content" id="ta" cols="30" rows="10" value="<%= content %>"></textarea>
        </div>
        <button class="btn btn-default">Submit</button>
    </form>

<%- include("../adminfooter") %>